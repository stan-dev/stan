##
# This file should modify the following variables
# as appropriate:
#   - CFLAGS
#   - CFLAGS_GTEST
#   - PCH
##

ifeq (g++,$(CC_TYPE))
  CFLAGS += -g
  CFLAGS += -Wno-unused-function
  PCH = .gch
endif
ifeq (clang++,$(CC_TYPE))
  CFLAGS += -Wno-unused-function
  CFLAGS += -Wno-tautological-compare
  #PCH = .pch
endif