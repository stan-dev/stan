##
# This file should modify the following variables
# as appropriate:
#   - CFLAGS
#   - CFLAGS_GTEST
#   - OPT
#   - PCH
##

ifeq (g++,$(CC_TYPE))
  CFLAGS += -std=gnu++0x
  CFLAGS += -g
  CFLAGS += -Wno-unused-function
  PCH = .gch
endif
ifeq (clang++,$(CC_TYPE))
  CFLAGS += -Wno-c++0x-extensions
  CFLAGS += -Wno-unused-function
  CFLAGS += -g
  #PCH = .pch
endif